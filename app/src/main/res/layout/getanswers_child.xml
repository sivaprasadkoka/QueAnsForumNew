<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_answer"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_answerby"
        android:textSize="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_answer1by"
                android:textSize="15dp"
                android:gravity="right"
                android:layout_marginTop="20dp"
                android:textColor="#ff3344"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_answer1date"
                android:textSize="15dp"
                android:gravity="right"
                android:layout_marginBottom="10dp"
                android:textColor="#ff3344"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_add_comment"
                    android:text="+"
                    android:layout_marginRight="13dp"
                   android:background="#8BC34A"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/btn_view_comment"
                    android:text=">>"
                    android:background="@drawable/button_rounded"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_ans1"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_ans2"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tv_ans3"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_view_more"
                    android:text="View more"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:background="@drawable/button_rounded"
                    android:layout_width="120dp"
                    android:layout_height="40dp" />




            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_BookMark"
            android:background="@drawable/ic_book_mark_unsel"
            android:layout_width="35dp"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_height="35dp" />

    </androidx.cardview.widget.CardView>


</LinearLayout>